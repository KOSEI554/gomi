<main role="main">
  <div class="album py-5 bg-light">
    <% eventList.forEach(function(eventItem) { %>
        <div class="container">
          <div class="row">
            <div class="col-md-4">
              <a href="/eventjoin?id=<%= eventItem.id%>">
                <div class="card mb-4 shadow-sm">
                  <p class="text-center"><%= eventItem.eventname %></p>            
                  <img class="bd-placeholder-img card-img-top" src="/images/<%= eventItem.img_url %>" alt=""  width="100%" height="225">
                  <div class="card-body">
                    <p class="card-text">日程:<%= eventItem.date %></p>
                    <p class="card-text">時間:<%= eventItem.time %></p>
                    <p class="card-text">コンセプト:<%= eventItem.concept %></p>
                    <p class="card-text">場所:<%= eventItem.prefecture %></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <small class="text-muted"><%= eventItem.created_at %></small>
                      <div><a href=""><i class="material-icons large-size">reply</i></a></div>
                    </div>
                  </div>
                </div>
              </a>
            </div>
    <% }); %>
  </div>

  <p class="post"><a href="/create"><i class="material-icons large-size">add_comment</i></a></p>
</main>

<footer class="footer">
  <div class="container">
