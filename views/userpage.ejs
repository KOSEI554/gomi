    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">


    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
    <!-- Custom styles for this template -->
    <link href="../stylesheets/album.css" rel="stylesheet">
  </head>
  <body>
  <header>
  <div class="collapse bg-primary" id="navbarHeader">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-md-7 py-4">
          <h4 class="text-white">トップページ</h4>
        </div>
        <div class="col-sm-4 offset-md-1 py-4">
          <h4 class="text-white">Menu</h4>
          <ul class="list-unstyled">
            <li><a href="/event" class="text-white">イベント</a></li>
            <li><a href="/timeline" class="text-white">タイムライン</a></li>
            <li><a href="/account" class="text-white">アカウント</a></li>
            <li><a href="/logout" class="text-white">ログアウト</a></li>
            
          </ul>
        </div>
      </div>
    </div>
  </div> 
  <div class="navbar navbar-dark bg-primary shadow-sm">
    <div class="container d-flex justify-content-between">
      <a href="#" class="navbar-brand d-flex align-items-center">
        <strong>PuCC</strong>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </div>
</header>

<main role="main">
  <div class="card">
    <!-- <img class="card-img-top" src="/images/pathToYourImage.png" alt="Card image cap"> -->
    <div class="card-body">
      <h4 class="card-title">
        <div class="user-info">
          <div class="user-name">    
            <% if (typeof user !== 'undefined') { %>
              <span><%= user.username %></span>
            <% } %>
          </div>
        </div>
      </h4>
    </div>
  </div>
  <div class="album py-5 bg-light d-flex flex-wrap">
    <% postList.forEach(function(postItem) { %>
        <div class="container h-25 w-50">
          <div class="row">
            <div class="col-md-4">
              <a href="/comment?id=<%= postItem.id%>">
                <div class="card mb-4 shadow-sm">
                  <p class="text-center"><%= postItem.username %></p>            
                  <img class="bd-placeholder-img card-img-top" src="/images/<%= postItem.img_url %>" alt=""  width="100%" height="225">
                </div>
              </a> 
            </div>
          </div>    
        </div>
    <% }); %>
  </div>
  <p class="post"><a href="/post"><i class="material-icons large-size">add_comment</i></a></p>



</main>

<footer class="footer">
    <div class="text-muted text-center">PuCC</div>
</footer>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>


</body>
</html>